<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.borlander.ianmayo.nviewer.app.NarrativeViewerApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.borlander.ianmayo.nviewer.app.Perspective"
            id="narrative.viewer.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.mwc.cmap.plotViewer.CMAP"
            class="com.borlander.ianmayo.nviewer.app.NViewerView"
            id="com.borlander.ianmayo.nviewer.app.view"
            name="Narrative Viewer">
      </view>
   </extension>

</plugin>
