<?xml version="1.0" encoding="UTF-8"?>
<ScenarioController OutputDirectory="RB_output"
	xmlns="http://www.mwc.org/asset">
	<ScenarioGenerator>

		<MultiParticipantGenerator>
			<ParticipantVariance name="GreenFV1" number="50">
				<ParticipantLocation inRandomLocations="false">
					<WorldArea>
						<TopLeft>
							<shortLocation Lat="1" Long="0"></shortLocation>
						</TopLeft>
						<BottomRight>
							<shortLocation Lat="0" Long="1"></shortLocation>
						</BottomRight>
					</WorldArea>
				</ParticipantLocation>
			</ParticipantVariance>
			<ParticipantVariance name="RedFV1" number="12">
				<ParticipantLocation inRandomLocations="true">
					<WorldArea>
						<TopLeft>
							<shortLocation Lat="1" Long="0.3"></shortLocation>
						</TopLeft>
						<BottomRight>
							<shortLocation Lat="0.03" Long="1"></shortLocation>
						</BottomRight>
					</WorldArea>
				</ParticipantLocation>
			</ParticipantVariance>
			<ParticipantVariance name="RedFC" number="6">
				<ParticipantLocation>
					<WorldArea>
						<TopLeft>
							<shortLocation Lat="1" Long="0.1"></shortLocation>
						</TopLeft>
						<BottomRight>
							<shortLocation Lat="0.2" Long="1"></shortLocation>
						</BottomRight>
					</WorldArea>
				</ParticipantLocation>
			</ParticipantVariance>
			<ParticipantVariance name="RedSWM" number="1">
				<ParticipantLocation inRandomLocations="true">
					<WorldArea>
						<TopLeft>
							<shortLocation Lat="1" Long="0"></shortLocation>
						</TopLeft>
						<BottomRight>
							<shortLocation Lat="0" Long="1"></shortLocation>
						</BottomRight>
					</WorldArea>
				</ParticipantLocation>
			</ParticipantVariance>
		</MultiParticipantGenerator>
	</ScenarioGenerator>
	<ObserverList>
		<TimeObserver Name="elapsed time" Active="true">
			<Duration Value="1" Units="hours" />
		</TimeObserver>
		<PlotDetectionStatusObserver Name="Detection status"
			Active="true">
			<Target>
				<TargetType>
					<Type Name="RED" />
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="BLUE" />
				</TargetType>
			</Watch>
		</PlotDetectionStatusObserver>
		<DebriefReplayObserver Name="DebriefPlot"
			record_detections="true" record_positions="true" Active="true"
			record_decisions="true" file_name="RBTrial">
			<SubjectToTrack>
				<Type Name="BLUE" />
			</SubjectToTrack>
		</DebriefReplayObserver>
		<StopOnProximityObserver Name="Non-BLUE near MER"
			Active="true">
			<Target>
				<TargetType AND="false">
					<Type Name="RED" />
					<Type Name="GREEN" />
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="MPA" />
				</TargetType>
			</Watch>
			<Range Value="6" Units="nm" />
		</StopOnProximityObserver>
		<RemoveDetectedObserver PlotTheDead="true"
			Name="Delete id'd targets" Active="true" DetectionLevel="Identified">
			<Target>
				<TargetType AND="false">
					<Type Name="RED" />
					<Type Name="GREEN" />
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="HELICOPTER" />
				</TargetType>
			</Watch>
		</RemoveDetectedObserver>
	</ObserverList>
</ScenarioController>

