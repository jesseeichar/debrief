<?xml version="1.0" encoding="UTF-8"?>
<ScenarioController OutputDirectory="results" xmlns="http://www.mwc.org/asset">
	<ScenarioGenerator>
		<MultiScenarioGenerator Number="10" NameTemplate="NewInterceptRange_">
			<VarianceList>
				<Variance name="diff detection ranges" id="//TypedCookieInterceptSensor//DetectionRange">
					<Attribute name="Value">
						<Range max="80" min="120" />
					</Attribute>
					
				</Variance></VarianceList>
		</MultiScenarioGenerator>
		<MultiParticipantGenerator>
			<ParticipantVariance name="red" number="100">
				<Variance name="target location" id="/Waterfall//shortLocation">
					<Attribute name="Long">
						<Range max="0" min="4" />
					</Attribute>
					
				</Variance>
				<Variance name="transit speed" id="/Waterfall//Speed">
					<Attribute name="Value">
						<Range max="8" min="4" />
					</Attribute>
					
				</Variance>
			</ParticipantVariance>
		</MultiParticipantGenerator></ScenarioGenerator>
	<ObserverList>
		<TimeObserver Name="Domesday Timer" Active="true">
			<Duration Value="120" Units="hours" ></Duration>
		</TimeObserver>
		<TrackPlotObserver Active="false" Name="TrackPlot" show_positions="true">
			<GridDelta Value="4" Units="nm" ></GridDelta>
		</TrackPlotObserver>
		<DebriefReplayObserver Name="Debrief tracks" record_detections="true"
			record_positions="true" Active="false" record_decisions="true">
		</DebriefReplayObserver><RemoveDetectedObserver Name="Ditch detected SSKs" Active="true">
			<Target>
				<TargetType>
					<Type Name="RED" />
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="BLUE" />
				</TargetType>
			</Watch>
		</RemoveDetectedObserver>
		<PlotSensorObserver Name="Show detections" Active="true">
			<Target>
				<TargetType>
					<Type Name="SUBMARINE" ></Type>
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="SURFACE" />
				</TargetType>
			</Watch>
		</PlotSensorObserver>
		<ProportionDetectedObserver Name="how many red's detected?" Active="true">
			<Target>
				<TargetType>
					<Type Name="RED" />
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="BLUE" />
				</TargetType>
			</Watch>
			<BatchCollator OnlyBatchReporting="true" Active="true"
				CollationMethod="LIST" PerCase="false" />
		</ProportionDetectedObserver></ObserverList>
</ScenarioController>
