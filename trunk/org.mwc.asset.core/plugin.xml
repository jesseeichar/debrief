<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.mwc.asset.core.ASSETPerspectiveFactory"
            icon="icons/components.png"
            id="org.mwc.asset.core.Perspective"
            name="Tactical Simulation"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.mwc.asset.core.simulation.category"
            name="Tactical Simulation"/>
   </extension>
   <extension
         id="CMAP"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="CMAP">       
             <property
              name="aboutImage"
              value="icons/WorkBenchLogo.gif"/>
        <property
              name="aboutText"
              value="Welcome to ASSET NG, from the Maritime Warfare Centre"/>
        <property
              name="windowImages"
              value="icons/security_agent.png"/>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup class="org.mwc.asset.core.ASSETPlugin"/>
   </extension>
   <extension
         id="ASSET"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="AssetNG">
         <property
               name="windowImages"
               value="icons/components.gif">
         </property>
         <property
               name="aboutText"
               value="Welcome to ASSET NG, from the Maritime Warfare Centre">
         </property>
         <property
               name="aboutImage"
               value="icons/WorkBenchLogo.gif">
         </property>
         <property
               name="appName"
               value="AssetNG">
         </property>
      </product>
   </extension>
</plugin>
